<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <View
        android:id="@+id/popup_topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@xml/text_btn_bg_n"
        android:orientation="vertical"
        android:paddingTop="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/choose_photo"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="12dp"
            android:background="#d8d8d8" />

        <TextView
            android:id="@+id/tvCamera"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@xml/text_btn_middle"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/action_camera"
            android:textColor="@xml/btn_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvAlbumChoose"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@xml/text_btn_bottom"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/action_album_choose"
            android:textColor="@xml/btn_text_color"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:background="@xml/text_btn_bg_n"
        android:clickable="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/cancel"
        android:textColor="@xml/btn_text_color"
        android:textSize="15sp" />

</LinearLayout>