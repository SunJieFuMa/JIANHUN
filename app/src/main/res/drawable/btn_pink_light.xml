<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" >
        <shape>
            <solid android:color="#ff9fb0" />
            <corners android:radius="3dp" />
            <stroke android:width="1px" android:color="#ff9fb0" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/c_ff3257" />
            <corners android:radius="3dp" />
            <stroke android:width="1px" android:color="@color/c_ff3257" />
        </shape>
    </item>
</selector>