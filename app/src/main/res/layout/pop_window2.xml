<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_menu_shop"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/lin_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_input_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:drawablePadding="5dp"
                android:gravity="left"
                android:paddingBottom="13.0dp"
                android:paddingLeft="10.0dp"
                android:paddingRight="10dp"
                android:paddingTop="13.0dp"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_password_close"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/password_split"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fefefc"
            android:orientation="vertical"
            android:padding="15dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="请输入您的姓名">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/xml_login_etbg"
                    android:drawableLeft="@drawable/icon_rcode"
                    android:drawablePadding="12dp"
                    android:drawableStart="@drawable/icon_rcode"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/c_9a9a9a"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="请输入您的手机号">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/xml_login_etbg"
                    android:drawableLeft="@drawable/icon_phone"
                    android:drawablePadding="12dp"
                    android:drawableStart="@drawable/icon_phone"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/c_9a9a9a"/>

            </android.support.design.widget.TextInputLayout>
            <!--<TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_2"
                android:textSize="15sp"/>-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#fefefc"
            android:gravity="right"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_do"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/xml_login_btnbg"
                android:clickable="true"
                android:elevation="2dp"
                android:gravity="center"
                android:text="预约"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"/>

</LinearLayout>