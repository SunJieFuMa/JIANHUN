<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/lib_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_eeeeee"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新郎姓名"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="14dp"
                android:paddingStart="14dp"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="请输入新郎姓名"
                android:singleLine="true"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"
                android:ellipsize="end"
                android:textColor="@color/light_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <include layout="@layout/line_ver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新娘姓名"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="14dp"
                android:paddingStart="14dp"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"/>

            <EditText
                android:id="@+id/etName2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入新娘姓名"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"
                android:ellipsize="end"
                android:textColor="@color/light_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <include layout="@layout/line_ver" />

        <include layout="@layout/line_ver"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="婚宴时间"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="14dp"
                android:paddingStart="14dp"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="请选择婚宴时间"
                android:drawableRight="@drawable/icon_right_nav"
                android:drawableEnd="@drawable/icon_right_nav"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/light_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <include layout="@layout/line_ver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="酒店名称"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="14dp"
                android:paddingStart="14dp"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"/>

            <EditText
                android:id="@+id/etHotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="请输入酒店名称"
                android:singleLine="true"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"
                android:ellipsize="end"
                android:textColor="@color/light_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <include layout="@layout/line_ver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="酒店地址"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingLeft="14dp"
                android:paddingStart="14dp"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"/>

            <EditText
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="请输入酒店地址"
                android:paddingRight="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/light_black"
                android:textSize="14sp"/>

        </LinearLayout>

        <include layout="@layout/line_ver" />

    </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>