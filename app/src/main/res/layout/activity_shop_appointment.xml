<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              >

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="?attr/colorPrimary"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:hint="请输入您的姓名">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/xml_login_etbg"
                    android:drawableLeft="@drawable/icon_rcode"
                    android:drawablePadding="12dp"
                    android:drawableStart="@drawable/icon_rcode"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/c_9a9a9a"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="请输入您的手机号">

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/xml_login_etbg"
                    android:drawableLeft="@drawable/icon_phone"
                    android:drawablePadding="12dp"
                    android:drawableStart="@drawable/icon_phone"
                    android:gravity="center_vertical"
                    android:inputType="phone"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/light_black"
                    android:textColorHint="@color/c_9a9a9a"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_do"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/xml_login_btnbg"
                android:clickable="true"
                android:elevation="2dp"
                android:gravity="center"
                android:text="预约"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/xml_login_btnbg"
                android:clickable="true"
                android:elevation="2dp"
                android:gravity="center"
                android:text="取消"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/white"/>


        </LinearLayout>

    </FrameLayout>

</LinearLayout>