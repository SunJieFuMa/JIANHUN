<?xml version="1.0" encoding="utf-8"?><!--<com.chantyou.janemarried.view.FixedGridView--><!--android:id="@+id/gv_channel"--><!--xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:background="@color/white"--><!--android:layout_height="wrap_content"--><!--android:numColumns="4"--><!--android:scrollbars="none"--><!--android:stretchMode="columnWidth"/>-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_channel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_clicked_with_mask"
    android:clickable="true"
    android:gravity="center_vertical"
    android:minHeight="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radgp_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:checkedButton="@+id/tv_shop_home"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tv_shop_home"
                style="@style/radioButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_right_cb"
                android:drawableTop="@drawable/tab_home"
                android:text="主页" />

            <RadioButton
                android:id="@+id/tv_shop_package"
                style="@style/radioButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_right_cb"
                android:drawableTop="@drawable/tab_package"
                android:text="套餐" />

            <RadioButton
                android:id="@+id/tv_shop_demo"
                style="@style/radioButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_right_cb"
                android:drawableTop="@drawable/tab_demo"
                android:text="案例" />

            <RadioButton
                android:id="@+id/tv_shop_rate"
                style="@style/radioButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableTop="@drawable/tab_rate"
                android:text="评价" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>