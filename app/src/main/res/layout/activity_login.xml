<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/lib_toolbar_guid" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_logo"/>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="14dp"
                android:hint="@string/hit_input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/c_9a9a9a"
                    android:inputType="phone"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/light_black"
                    android:drawableStart="@drawable/icon_phone"
                    android:drawableLeft="@drawable/icon_phone"
                    android:background="@drawable/xml_login_etbg"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:hint="@string/hit_input_pwd"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/c_9a9a9a"
                    android:inputType="textPassword"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/light_black"
                    android:drawableStart="@drawable/icon_pwd"
                    android:drawableLeft="@drawable/icon_pwd"
                    android:background="@drawable/xml_login_etbg"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/xml_login_btnbg"
                android:textColor="@color/white"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginTop="16dp"
                android:text="@string/login2"
                android:elevation="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ff4163"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/free_register"/>
                <TextView
                    android:id="@+id/tvFindpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_ff4163"
                    android:clickable="true"
                    android:layout_gravity="right|center_vertical"
                    android:text="@string/froget_pwd"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <View
                    android:layout_width="60dp"
                    android:layout_height="1.2px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/c_808080" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_808080"
                    android:text="合作账号快速登录"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:layout_width="60dp"
                    android:layout_height="1.2px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/c_808080" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tlIcon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/ic_thread_qq"
                        android:scaleType="centerInside"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tlIcon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thread_wechat"
                        android:scaleType="centerInside"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tlIcon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thread_weibo"
                        android:scaleType="centerInside"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tlIcon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_thread_taobao"
                        android:scaleType="centerInside"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tlIcon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_thread_aipay"
                        android:scaleType="centerInside"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>