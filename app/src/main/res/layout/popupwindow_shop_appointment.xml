<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="请输入您的姓名">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/xml_login_etbg"
            android:drawableLeft="@drawable/icon_rcode"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/icon_rcode"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/light_black"
            android:textColorHint="@color/c_9a9a9a"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="请输入您的手机号">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/xml_login_etbg"
            android:drawableLeft="@drawable/icon_phone"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/icon_phone"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/light_black"
            android:textColorHint="@color/c_9a9a9a"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_do"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/xml_login_btnbg"
        android:clickable="true"
        android:elevation="2dp"
        android:gravity="center"
        android:text="预约"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/xml_login_btnbg"
        android:clickable="true"
        android:elevation="2dp"
        android:gravity="center"
        android:text="取消"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/white"/>


</LinearLayout>

