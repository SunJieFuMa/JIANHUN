<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="32dp"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/cxml_tab_selector"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/xml_more_icon_sel"
        android:drawableEnd="@drawable/xml_more_icon_sel"
        android:paddingEnd="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/xml_complete_bg"/>

    <com.mhh.lib.widget.ListViewEx
        android:id="@+id/lv_clist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"/>
</LinearLayout>